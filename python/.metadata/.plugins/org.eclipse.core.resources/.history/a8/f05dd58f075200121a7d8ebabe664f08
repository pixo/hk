#!/usr/bin/env python

import couchdb
import argparse

dname="db1"
server = couchdb.Server("http://127.0.0.1:5984")
db = server[dname]

parser = argparse.ArgumentParser()
parser.add_argument("name", help="name of the project to create")
args = parser.parse_args()

doc = {
    "_id": "project_%s" % args.name,
    "type": "project",
    "name": args.name
}
_id, _rev = db.save(doc)
print "Project %r created as Document(%r)" % (args.name, _id)
