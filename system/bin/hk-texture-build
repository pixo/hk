#!/usr/bin/env python

import sys, os
import pipeline.core as core

def cli ( files ):

	for file in files:
		
		if file.find ("_ibl_") >= 0 :
			mode = "latlong"

		else:
			mode = "ww"

		core.textureBuild ( path = os.path.abspath ( file ), mode = mode )

if __name__ == '__main__':
	args = sys.argv
	args.pop ( 0 )
	cli ( args )