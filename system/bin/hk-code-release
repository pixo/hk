#!/bin/bash

destination=$HK_CODE_PATH
origin=$HK_ROOT/users/$USER/codes/debug
directories="python templates system"

if [ -n "$HK_ROOT" ]
	then
		if [ -n "$HK_CODE_PATH" ]
			then 
		    	for directory in $directories 
		    		do	cp -rv $origin/$directory $destination
		    	done
	    	else
	    		echo "You should set a project with the command first eg:'hk-project project-name'. "
	    	fi
else
		echo "You should set the HK_ROOT variable."

fi