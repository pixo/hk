#!/bin/bash

destination=$CODEPATH/
origin=$HOMEWORKS/users/$USER/codes/debug
directories="python templates system"

if [ -z "$$HOMEWORKS" ]
	then
		echo "you should set the HOMEWORKS variable"
	else
	   	echo "$destination exists."
    	for directory in $directories 
    		do	cp -rv $origin/$directory $destination
    		done
fi