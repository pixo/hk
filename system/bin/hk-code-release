#!/bin/bash

destination=$HK_CODE_PATH
origin=$HK_USER_CODE_PATH
directories="python templates system"

if [ -n "$1" ]
	then
		dirlist=$directories
		unset directories
		for value in $dirlist
			do
				if [ $1 == $value ] 
					then
						directories="$1 $directories"
				fi
		done
		if [ -z $directories ]
			then
				echo "hk-code-release: '$1' can't be released."
		fi
fi

if [ -n "$HK_ROOT" ]
	then
		if [ -n "$HK_CODE_PATH" ]
			then 
		    	for directory in $directories 
		    		do cp -rv $origin/$directory $destination
		    	done
	    	else
	    		echo "You should set a project with the command first eg:'hk-project project-name'. "
	    	fi
else
		echo "You should set the HK_ROOT variable."
fi