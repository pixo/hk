#!/usr/bin/env python

import sys, os
import pipeline.core as core

def cli ( files ):
	absp = list ()

	for file in files:
		absp.append ( os.path.abspath ( file ) )

	files = core.textureCheck ( core.getIdFromPath ( absp [ 0 ] ), absp )
	
	for file in files:
		print "textureCheckCli: WRONG %s" % file 

if __name__ == '__main__':
	args = sys.argv
	args.pop ( 0 )
	cli ( args )