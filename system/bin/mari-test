#!/bin/bash

echo "Running hk-mari $HK_MARI_VER..."
if $HK_DEV_MODE
    then
		code="$HK_USER_CODE_PATH"
    else
        code="$HK_CODE_PATH"
fi
export PYTHONPATH="$HK_PYSIDE:$HK_COUCHDB:$PYTHONPATH"

script="$code/tools/mari/$HK_MARI_VER/python"

echo $script
export MARI_SCRIPT_PATH="$script"

/usr/local/soft/mari/$HK_MARI_VER_T/mari $@

